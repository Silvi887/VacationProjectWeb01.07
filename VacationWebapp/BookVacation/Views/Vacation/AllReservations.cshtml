@using  VacationApp.ViewModels.Vacation
@model  IEnumerable<AllReservationsViewModel>

<div class="text-center">

   <p>All Reservations</p>

  
    <hr />
   <table id="Table1">
        
   @foreach(var res in Model){
   
        <tr>
           <td>

             <h3>  @res.HotelName</h3>
            </td>
            <td> <p>@res.StartDate</p></td>
            <td> <p>@res.EndDate</p></td>
                <td>
                   @*  <div class="classBtns">

                        <a asp-controller="Vacation" asp-action="Edit" asp-route-id="@res.IdReservation" class="btn btn-info w-100">
                            <i class="fas fa-info-circle"></i> Edit
                        </a></div> *@
                </td>
                <td>
                    <div class="card-footer text-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Vacation" asp-action="Index" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            @if (res.IsUserGuest && User?.Identity?.IsAuthenticated == true)@* && !Model.IsInUserFavorite *@
                            {
                                <form asp-controller="Vacation" asp-action="GetFavorite" method="post" class="d-flex justify-content-center align-items-center flex-fill mx-1">
                                    <input type="hidden" name="id" value="@res.IdReservation" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-heart"></i> Add to Favorites</button> 
                                  
                                </form> 
                                <a asp-controller="Vacation" asp-action="Edit" asp-route-id="@res.IdReservation" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">
										<i class="fas fa-edit"></i> Edit
									</a>
                            }
                            else @if (User?.Identity?.IsAuthenticated == true && ViewBag.EmailConfirmed == true)
                            {
                               
                                <a asp-controller="Vacation" asp-action="Delete" asp-route-id="@res.IdReservation" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </td>
        </tr>
            <tr>
                
            </tr>
   }
    </table>
    

        
</div>