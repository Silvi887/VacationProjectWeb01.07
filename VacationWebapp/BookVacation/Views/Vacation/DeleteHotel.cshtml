@using VacationApp.ViewModels.Hotel
@model DeleteHotelIndexModel



<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
  <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.HotelName</h3>
                <p class="mb-0"><strong>Published By:</strong> @Model.NameManager</p>
                <p class="text-danger mt-3">
                    Are you sure you want to delete <strong>@Model.HotelName</strong>?
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="DeleteHotel" method="post">
                    <input type="hidden" asp-for="@Model.Idhotel" />
                  @*   <input type="hidden" asp-for="Title" />
                    <input type="hidden" asp-for="AuthorId" /> *@
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                </form>
                <a asp-controller="Vacation" asp-action="Details" asp-route-id="@Model.Idhotel" class="btn btn-warning">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
