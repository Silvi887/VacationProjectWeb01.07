@{
    ViewData["Title"] = "Add Reservation";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

@using VacationApp.ViewModels.Vacation

@model AddReservation

<div class="row3">
<h3>Book Hotel</h3></div>
<div class="row1">
    
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="row1">
                <div class="col-sm-6 mb-3">
                    <label class="form-label-add-edit">HotelName</label>
                    <input asp-for="@Model.HotelName" class="form-control" aria-required="true" />

                    <input asp-for="@Model.HotelId" type="hidden"  aria-required="true" />
                    @*   <span asp-validation-for="@Model.Name" class="text-danger"></span> *@
                </div></div>
            <div class="row1">
               
                <div class="col-sm-6 mb-3">
                  
                    <label asp-for="@Model.GuestFirstName" class="form-label-add-edit">FirstName</label>
                    <input asp-for="@Model.GuestFirstName" class="form-control" aria-required="true" />
                  @*   <span asp-validation-for="@Model.Name" class="text-danger"></span> *@
                </div>

                <div class="col-sm-6 mb-3">
                    <label asp-for="@Model.LastNameG" class="form-label-add-edit">Family</label>
                    <input asp-for="@Model.LastNameG" class="form-control" aria-required="true" />
                  @*   <select  class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Terrains, "Id", "Name"))">
                        <option value="">...</option>
                    </select> *@
                   @*  <span asp-validation-for="@Model.TerrainId" class="text-danger"></span> *@
                </div>
                <div class="col-sm-6 mb-2">

                    <label asp-for="@Model.DateofBirth" class="form-label-startdate">DateBirth</label>
                    <input asp-for="@Model.DateofBirth" type="date" class="form-control" aria-required="true" value="@Model.DateofBirth">
                    <span class="text-danger"></span>
                </div>
                <div class="col-sm-6 mb-3">
                    <label asp-for="@Model.GuestEmail"  class="form-label-add-edit">Email</label>
                    <input asp-for="@Model.GuestEmail" class="form-control" aria-required="true" />
                    @*   <span asp-validation-for="@Model.Name" class="text-danger"></span> *@
                </div>
            </div>

            <div class="row1">

                <div class="col-sm-6 mb-3">
                    <label asp-for="@Model.GuestAddress" class="form-label-add-edit">Address</label>
                    <input asp-for="@Model.GuestAddress" class="form-control" aria-required="true" />
                    </div>

                <div class="col-sm-6 mb-3">
                    <label asp-for="@Model.GuestPhoneNumber" class="form-label-add-edit">PhoneNumber</label>
                    <input asp-for="@Model.GuestPhoneNumber" class="form-control" aria-required="true" />
                </div>
                </div>
            <div>
                <label asp-for="@Model.RoomId" class="form-label-add-edit">Type room</label>
                <select asp-for="@Model.RoomId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.roomdrp, "Id", "RoomType"))">
                    <option value="">...</option>
                </select>
                <span  class="text-danger"></span>

                <label asp-for="@Model.ChildrenCount" class="form-label-childrencount">CountChilren</label>
                <input asp-for="@Model.ChildrenCount" class="form-control" aria-required="true">
                   
                <span class="text-danger"></span>

                <label class="form-label-adultscount">CountAdults</label>
                <input asp-for="@Model.AdultsCount" class="form-control" aria-required="true">
                 
                <span class="text-danger"></span>
            </div>

            <div class="col-sm-6 mb-2">

                <label asp-for="@Model.StartDate" class="form-label-startdate">StartDate</label>
                <input asp-for="@Model.StartDate" type="date" class="form-control" aria-required="true" value="@(string.IsNullOrEmpty(Model.StartDate) ? today : Model.StartDate)">
                <span class="text-danger"></span>

                <label   asp-for="@Model.EndDate"   class="form-label-enddate">EndDate</label>
                <input asp-for="@Model.EndDate" type="date" class="form-control" value="@(string.IsNullOrEmpty(Model.EndDate) ? today : Model.EndDate)" aria-required="true" />
                <span class="text-danger"></span>
            </div>

            <div class="mb-2">
                <button class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }
        </form>
    </div>
</div>
